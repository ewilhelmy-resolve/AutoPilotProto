# Nginx Configuration for Resolve Onboarding
# Place this file at /etc/nginx/sites-available/resolve-onboarding

upstream resolve_app {
    least_conn;
    server 127.0.0.1:5000 max_fails=3 fail_timeout=30s;
    # Add more servers for production:
    # server app2.resolve.io:5000 max_fails=3 fail_timeout=30s;
    # server app3.resolve.io:5000 max_fails=3 fail_timeout=30s;
    keepalive 32;
}

server {
    listen 80;
    server_name localhost resolve.local;
    
    # Rate limiting
    limit_req_zone $binary_remote_addr zone=api:10m rate=10r/s;
    limit_req_zone $binary_remote_addr zone=auth:10m rate=5r/s;
    
    # Security headers
    add_header X-Frame-Options DENY always;
    add_header X-Content-Type-Options nosniff always;
    add_header Referrer-Policy strict-origin-when-cross-origin always;
    
    # Main location
    location / {
        # Rate limiting for auth endpoints
        if ($request_uri ~ ^/(auth|login|signup)) {
            limit_req zone=auth burst=10 nodelay;
        }
        limit_req zone=api burst=20 nodelay;
        
        proxy_pass http://resolve_app;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_cache_bypass $http_upgrade;
        
        proxy_set_header Host $http_host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        proxy_connect_timeout 5s;
        proxy_send_timeout 30s;
        proxy_read_timeout 30s;
    }
    
    # Health check endpoint
    location /nginx-health {
        access_log off;
        return 200 "healthy\n";
        add_header Content-Type text/plain;
    }
    
    # Block hidden files
    location ~ /\. {
        deny all;
        access_log off;
    }
}